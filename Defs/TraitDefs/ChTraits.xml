<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <TraitDef>
    <defName>ChBoxer</defName>
    <degreeDatas>
      <li>
        <label>ch boxer</label>
        <description>Excels at unarmed combat. When unarmed, melee damage becomes absurd.</description>
        <statOffsets>
          <MeleeHitChance>100.0</MeleeHitChance>
          <PainShockThreshold>1000</PainShockThreshold>
        </statOffsets>
        <skillGains>
          <Melee>10</Melee>
        </skillGains>
      </li>
    </degreeDatas>
    <commonality>0</commonality>
  </TraitDef>

  <TraitDef>
    <defName>ChTex</defName>
    <degreeDatas>
      <li>
        <label>ch tex</label>
        <description>Excels with revolvers. While wielding one, accuracy and handling become absurd.</description>
        <skillGains>
          <Shooting>10</Shooting>
        </skillGains>
      </li>
    </degreeDatas>
    <commonality>0</commonality>
  </TraitDef>

  <TraitDef>
    <defName>ChZippy</defName>
    <degreeDatas>
      <li>
        <label>ch zippy</label>
        <description>Moves at an absurd speed.</description>
        <statOffsets>
          <MoveSpeed>100</MoveSpeed>
          <CrawlSpeed>100</CrawlSpeed>
        </statOffsets>
      </li>
    </degreeDatas>
    <commonality>0</commonality>
  </TraitDef>

  <TraitDef>
    <defName>ChTank</defName>
    <degreeDatas>
      <li>
        <label>ch tank</label>
        <description>Extremely resistant to injury. Damage is heavily reduced. Movement is less impacted by injury.</description>
        <statOffsets>
          <ArmorRating_Sharp>2.5</ArmorRating_Sharp>
          <ArmorRating_Blunt>2.5</ArmorRating_Blunt>
          <ArmorRating_Heat>2.0</ArmorRating_Heat>
        </statOffsets>
      </li>
    </degreeDatas>
    <commonality>0</commonality>
  </TraitDef>

  <TraitDef>
    <defName>ChGreenThumb</defName>
    <degreeDatas>
      <li>
        <label>ch green thumb</label>
        <description>Plants near me grow faster and ignore darkness and temperature penalties.</description>
        <skillGains>
          <Plants>10</Plants>
        </skillGains>
      </li>
    </degreeDatas>
    <commonality>0</commonality>
  </TraitDef>

  <TraitDef>
    <defName>ChArtificer</defName>
    <degreeDatas>
      <li>
        <label>ch artificer</label>
        <description>Everything I make is legendary.</description>
        <skillGains>
          <Construction>10</Construction>
          <Crafting>10</Crafting>
          <Artistic>10</Artistic>
        </skillGains>
      </li>
    </degreeDatas>
    <commonality>0</commonality>
  </TraitDef>

  <TraitDef>
    <defName>ChDoc</defName>
    <commonality>0</commonality>
    <degreeDatas>
      <li>
        <label>ch doc</label>
        <description>All surgeries performed by this pawn succeed. Tend quality is always excellent, including self-tend.</description>
        <skillGains>
          <Medicine>10</Medicine>
        </skillGains>
      </li>
    </degreeDatas>
  </TraitDef>

  <TraitDef>
    <defName>ChAscendant</defName>
    <commonality>0</commonality>
    <degreeDatas>
      <li>
        <label>ch ascendant</label>
        <description>This pawn radiates an exceptional presence. Nearby allies learn skills far more quickly and heal from injuries at an accelerated rate. Always fertile.</description>
      </li>
    </degreeDatas>
  </TraitDef>

  <TraitDef>
    <defName>ChBeastmaster</defName>
    <commonality>0</commonality>
    <degreeDatas>
      <li>
        <label>ch beastmaster</label>
        <description>Absolute dominion over animals. Taming and training are effectively guaranteed. Nearby colony animals are blessed with improved survival, productivity, and fighting ability.</description>
        <statOffsets>
          <TameAnimalChance>1000</TameAnimalChance>
          <TrainAnimalChance>1000</TrainAnimalChance>
        </statOffsets>
        <statFactors>
          <AnimalGatherSpeed>2.0</AnimalGatherSpeed>
          <AnimalGatherYield>2.0</AnimalGatherYield>
        </statFactors>
        <skillGains>
          <Animals>10</Animals>
        </skillGains>
      </li>
    </degreeDatas>
  </TraitDef>

  <TraitDef>
    <defName>ChDiplomat</defName>
    <commonality>0</commonality>
    <degreeDatas>
      <li>
        <label>ch diplomat</label>
        <description>Master of persuasion. Prisoners break faster, ideologies convert faster, trade deals improve, and social interactions land with overwhelming force.</description>
        <statOffsets>
          <SocialImpact>10.0</SocialImpact>
          <NegotiationAbility>10.0</NegotiationAbility>
          <TradePriceImprovement>2.0</TradePriceImprovement>
          <ConversionPower>10.0</ConversionPower>
        </statOffsets>
        <skillGains>
          <Social>10</Social>
        </skillGains>
      </li>
    </degreeDatas>
  </TraitDef>

  <TraitDef>
